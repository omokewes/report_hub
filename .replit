modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Dashboard Server"

[[workflows.workflow]]
name = "Admin Dashboard Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd AdminDashboard/AdminDashboard && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43537
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "cd AdminDashboard/AdminDashboard && npm run build"]
run = ["bash", "-c", "cd AdminDashboard/AdminDashboard && npm start"]
